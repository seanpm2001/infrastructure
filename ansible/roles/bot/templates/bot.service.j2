[Unit]
Description=TripleA Bot %i
Documentation=

[Service]
WorkingDirectory={{ bot_install_home }}
User=bot
Group=bot
ExecStart=java -server \
  -Xmx{{ bot_max_memory }} \
  -Xss1250K \
  -Djava.awt.headless=true \
  -jar {{ bot_install_home }}/bin/triplea-game-headless.jar \
  -Ptriplea.port="40%i" \
  -Ptriplea.name="{{ bot_name }}%i_{{ bot_city }}" \
  -Ptriplea.lobby.uri="{{ bot_lobby_uri }}" \
  -Ptriplea.map.folder="{{ bot_maps_folder }}"
Restart=always

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bot%i


[Install]
WantedBy=multi-user.target
